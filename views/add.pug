extends layout

block content
  body(class='dash-wrapper')
  h1 MakersBnB
  form(method='GET' action='/dashboard' name="returndashboard")
    button#returndashboard(type='submit') Return Dashboard

  h2 Add Listing
  form(method='POST' action='/add' id='add-listing-form')
    input#propertyName(type='text', name='propertyName', placeholder='name')
    input#propertyDescription(type='text', name='propertyDescription', placeholder='description')
    input#propertyPrice(type='text',name='propertyPrice' placeholder='price')
    button#create(type='submit') Add Property
