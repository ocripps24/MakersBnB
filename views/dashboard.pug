extends layout

block content
  body(class="dash-wrapper")
  div(class="grid-layout")
    div(class="welcome-block grid-item span-3 grid-item-1")
      h1 MakersBnB
      p Welcome Back #{name}
      h2 Dashboard

      a#addListing(href='/add') Add Listing


    div(class="middle grid-item grid-item-2" id="hidden-block")

    div(class="listings-block grid-item span-4 grid-item-3", id="listings")
      for property in properties
        p #{property.name}: #{property.description} /#{property.price}
        if userid == property.user_id
          form(method='POST', action='/edit', id='editproperty', name='editproperty')
            button#edit(type='submit', name='edit', value=property.id) Edit
        else
          form(method='POST', action=`/`+property.id+`/request`, id='requestproperty', name='requestproperty')
          <input type="submit" id="edit" value="request"/>


      
      
    
